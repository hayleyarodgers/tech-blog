<!-- Loop over each post in the posts array -->
{{#each posts as |post| }}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card rounded-0 col-10 my-4 px-0">
            <div class="card-body p-5">
                <blockquote class="blockquote mb-0">
                    <p>{{format_date post.date_created}}</p>
                    <br>
                    <h2>{{post.title}}</h2>
                    <br>
                    <p class="col-10 px-0 text-truncate">{{post.content}}</p>
                    <footer class="blockquote-footer">Written by <cite title="Source Title">{{user.username}}</cite></footer>
                    <br>
                    <br>
                    <a href="/post/{{post.id}}"><p>Read more â†’</p></a>
                </blockquote>
            </div>
        </div>
    </div>
</div>
{{/each}}
