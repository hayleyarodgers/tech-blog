<div class="container-fluid">
    <div class="row">
        <form class="col-6 mx-auto">
            <h2>Sign up</h2>
            <p>Already have an account? <a href="/login">Click here</a> to log in instead.</p>
            <br>
            <div class="form-group">
                <label for="signup-username">Username</label>
                <input type="text" class="form-control" id="signup-username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="signup-email">Email address</label>
                <input type="email" class="form-control" id="signup-email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="signup-password">Password</label>
                <input type="password" class="form-control" id="signup-password" placeholder="Password">
            </div>
            <button id="signup-button" type="submit" class="btn btn-primary my-5 px-4">Sign up</button>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>