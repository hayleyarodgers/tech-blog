<div class="container-fluid">
    <div class="row">
        <div class="col-10 mx-auto">
            <!--List of user's posts-->
            <h2>Your posts</h2>
            <p>Any posts you've written will show up here.</p>
            <br>
            <div id="existing-posts">
                {{#each posts as |post|}}
                <div class="card mb-3 rounded-0 border-0">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">{{post.title}}</h3>
                        <div>
                            <button id="update-post-button" type="submit" class="btn btn-primary px-4">Update</button>
                            <button id="delete-post-button" type="submit" class="btn btn-primary px-4">Delete</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <br>
            <hr>
            <form id="new-post">
                <h2>Add new post</h2>
                <p>All you need to add is a title and your content.</p>
                <br>
                <div class="form-group">
                    <label for="new-post-title">Title</label>
                    <input type="text" class="form-control" id="new-post-title" placeholder="What is your post about?">
                </div>
                <div class="form-group">
                    <label for="new-post-content">Content</label>
                    <textarea rows="3" class="form-control" id="new-post-content" placeholder="Write your post here."></textarea>
                </div>
                <button id="new-post-button" type="submit" class="btn btn-primary my-3 px-4">Post</button>
            </form>
        </div>
    </div>
</div>

<script src="./js/addPost.js"></script>