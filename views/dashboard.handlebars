<div class="container-fluid">
    <div class="row">
        <div class="col-10 mx-auto">
            <!--List of user's posts-->
            <div class="d-flex justify-content-between align-items-center">
                <h2>Your posts</h2>
                <a href="/addpost"><button id="add-post-button" class="btn btn-primary px-4">Add new post</button></a>
            </div>
            <p>Any posts you've written will show up below.</p>
            <br>
            <div id="existing-posts">
                {{#each posts as |post|}}
                <div class="card mb-3 rounded-0 border-0">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">{{post.title}}, {{format_date post.date_created}}</h3>
                        <div>
                            <a href="/updatepost/{{post.id}}"><button id="update-post-button" type="submit" class="btn btn-primary px-4">Update</button></a>
                            <button class="delete-post-button" type="submit" class="btn btn-primary px-4" data-post-id="{{post.id}}">Delete</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>